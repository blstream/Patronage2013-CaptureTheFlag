<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Single List Item Design -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/game_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.4"
                android:ellipsize="marquee"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textSize="16sp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/game_localization"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.3"
                android:drawableLeft="@drawable/localization_icon"
                android:drawablePadding="6dp"
                android:ellipsize="marquee"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true" />

            <TextView
                android:id="@+id/game_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.3"
                android:drawableLeft="@drawable/date_icon"
                android:drawablePadding="6dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/players_circle_opened"
                android:layout_width="67dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/players_circle" />

            <TextView
                android:id="@+id/game_players"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/game_max_players"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="45dp" />

            <ImageView
                android:id="@+id/signed_game_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/signed_label"
                android:src="@drawable/list_signed_label" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>