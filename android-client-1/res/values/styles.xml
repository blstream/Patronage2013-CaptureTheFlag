<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="CTFTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:background">#DBDBDB</item>
        <item name="android:colorBackground">#BEBEBE</item>
        <item name="android:textColor">#444444</item>
        <item name="android:buttonStyle">@style/CTFButton</item>
        <item name="android:editTextStyle">@style/CTFEditText</item>
    </style>

    <style name="CTFButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="CTFEditText" parent="android:style/Widget.EditText">
        <item name="android:textColor">#444444</item>
        <item name="android:background">#BEBEBE</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>