<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="CTFTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/background</item>
        <!--   <item name="android:background">#DBDBDB</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#444444</item>
        <item name="android:buttonStyle">@style/CTFButtonBlue</item>
        <item name="android:editTextStyle">@style/CTFEditText</item>
        <!-- Przy ScroolView obramowka -->
        <item name="android:colorBackgroundCacheHint">#54B2BD</item>
    </style>

    <style name="CTFButtonBlue" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CTFButtonOrange" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CTFEditText" parent="android:style/Widget.EditText">
        <item name="android:textColor">#444444</item>
        <item name="android:background">#BEBEBE</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CTFDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>