<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blstream.ctf1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <permission
        android:name="com.blstream.ctf1.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.blstream.ctf1.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--
         The following two permissions are not required to use
	     Google Maps Android API v2, but are recommended.

    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Maps API needs OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.blstream.ctf1.CaptureTheFlagApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CTFTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCRjXlKNYdWlfVqCr4RECh7Q8-C4s48N7o" />

        <!-- <uses-library -->
        <!-- android:name="com.google.android.maps" -->
        <!-- android:required="true" /> -->

        <activity
            android:name="com.blstream.ctf1.SplashScreen"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blstream.ctf1.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blstream.ctf1.CreateGameActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_create_game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blstream.ctf1.GameListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_game_list"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.blstream.ctf1.GameDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_game_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="org.acra.CrashReportDialog"
            android:configChanges="orientation|screenSize"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.blstream.ctf1.GameAreaMapActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_game_area_map"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
    </application>

</manifest>