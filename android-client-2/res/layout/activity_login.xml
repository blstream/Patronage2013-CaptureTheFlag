<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <!-- Theme ActionBar -->
<RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/orange_light"
                    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/textHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconActionBar"
        android:gravity="center|center_vertical"
        android:text="Capture The Flag"
        android:textColor="@color/light_text"
        android:textSize="26sp" />

        <ImageView
            android:id="@+id/iconActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="1dp"
            android:scaleType="center"
            android:src="@drawable/splash_ico" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextLoginUserame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="48dp"
         android:layout_toRightOf="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/username"
        android:padding="3dp"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextLoginUserame"
        android:layout_alignTop="@+id/editTextLoginUserame"
        android:layout_marginLeft="48dp"
        android:background="#54B2BD"
        
        android:scaleType="center"
        android:src="@drawable/icons_login" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignRight="@+id/registrationButton"
        android:layout_below="@+id/editTextLoginPassword"
        android:layout_marginTop="48dp"
        android:onClick="onClickButton"
        android:text="@string/login_button"
        android:gravity="center" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignRight="@+id/editTextLoginUserame"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="28dp"
        android:onClick="onClickButton"
        android:text="@string/registration"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/editTextLoginUserame"
        android:layout_marginTop="16dp"
        android:text="@string/password" />

 <ImageView
     android:id="@+id/imageView2"
     android:layout_width="48dp"
     android:layout_height="wrap_content"
     android:layout_alignBottom="@+id/editTextLoginPassword"
     android:layout_alignTop="@+id/editTextLoginPassword"
     android:layout_marginLeft="48dp"
     android:background="#54B2BD"
     
     android:scaleType="center"
     android:src="@drawable/icons_pass" />

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/imageView2"
        android:layout_alignRight="@+id/editTextLoginUserame"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:hint="@string/password"
        android:padding="3dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="28dp"
        android:text="@string/username" />

</RelativeLayout>